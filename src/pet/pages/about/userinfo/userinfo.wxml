<form class='fom'>
  <view class="cu-form-group margin-top fo">
		<view class="title">头像</view>
		<view class="cu-avatar radius bg-bule">
      <image src='http://localhost:8080/imgs/{{Userentity.img}}' class='im'></image>
    </view>
	</view>
  <view class="cu-form-group fo">
		<view class="title">用户名：</view>
		<input placeholder="{{Userentity.username}}" bindinput='username'></input>
	</view>
  <view class="cu-form-group fo">
		<view class="title">邮件：</view>
		<input placeholder="{{Userentity.email}}" bindinput='email'></input>
	
	</view>
  <view class="cu-form-group fo">
		<view class="title">手机：</view>
		<input placeholder="{{Userentity.phone}}" bindinput='phone'></input>
	
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
	</view>
</form>

<view class="padding flex flex-direction">
  
  <button class="cu-btn bg-red margin-tb-sm lg" bindtap="update">修改用户信息</button>
  </view>


